<h1>Documents</h1>

<div class="links">
  <%= link_to('new', new_document_path) %>
</div>

<ul>
  <% @documents.each do |document| %>
    <li>
      <%= link_to(document.name, document_path(document)) %> <%= link_to "Delete", document, :method => :delete, :confirm => "Are you sure ?"%>
      <% if document.pdf %>
        <%= link_to("Download", document.pdf.url) %>
      <% end %>
    </li>
  <% end %>
</ul>